{
  "ConnectionStrings": {
    "DefaultConnection": "<set-in-env>"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": []
  },
  "JwtSettings": {
    "Secret": "<set-in-env>",
    "Issuer": "PlanMorph",
    "Audience": "PlanMorph",
    "ExpiryMinutes": 60
  },
  "DigitalOcean": {
    "SpacesAccessKey": "<set-in-env>",
    "SpacesSecretKey": "<set-in-env>",
    "SpacesEndpoint": "<set-in-env>",
    "BucketName": "<set-in-env>",
    "Region": "<set-in-env>"
  },
  "EmailSettings": {
    "SmtpHost": "<set-in-env>",
    "SmtpPort": 587,
    "SmtpUsername": "<set-in-env>",
    "SmtpPassword": "<set-in-env>",
    "FromEmail": "<set-in-env>",
    "FromName": "PlanMorph"
  },
  "Currency": {
    "Base": "KES",
    "Supported": [ "KES", "USD", "EUR", "GBP", "UGX", "TZS", "ZAR" ],
    "ProviderUrl": "<set-in-env>",
    "CacheMinutes": 720,
    "FallbackRates": {
      "USD": 0.0065,
      "EUR": 0.0060,
      "GBP": 0.0052,
      "UGX": 23.5,
      "TZS": 16.5,
      "ZAR": 0.12
    }
  },
  "Paystack": {
    "BaseUrl": "<set-in-env>",
    "SecretKey": "<set-in-env>",
    "WebhookSecret": "<set-in-env>",
    "CallbackUrl": "<set-in-env>",
    "Currency": "KES"
  }
}
